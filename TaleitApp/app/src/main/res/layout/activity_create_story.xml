<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:padding="15dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Story name"/>
    <EditText android:id="@+id/story_name"
              android:layout_width="400dp"
              android:layout_height="wrap_content"
              android:layout_marginBottom="20dp"
    />

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Author:"
                  android:layout_marginEnd="5dp"
                  android:layout_marginRight="5dp"/>

        <TextView android:id="@+id/story_author"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:hint="Click to login"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginEnd="5dp"
                  android:layout_marginRight="5dp"
                  android:text="Category:"/>

        <TextView android:id="@+id/categories_label"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Show categories"
                  />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView android:id="@+id/categories_recycler"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First chapter name"/>
    <EditText android:id="@+id/root_title"
              android:layout_width="400dp"
              android:layout_height="wrap_content"
              android:layout_marginBottom="20dp"
              />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First chapter text"/>
    <EditText android:id="@+id/root_content"
              android:layout_width="400dp"
              android:layout_height="wrap_content"
              android:layout_marginBottom="20dp"
              />

    <ImageView android:id="@+id/apply"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:src="@drawable/ic_plus"/>

</LinearLayout>